{% extends 'baseAdmin.html.twig' %}

{% block title %}Technique index{% endblock %}

{% block body %}
    <h1>Technique index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for technique in techniques %}
            <tr>
                <td>{{ technique.id }}</td>
                <td>{{ technique.nom }}</td>
                <td>{{ technique.description }}</td>
                <td>
                    <a href="{{ path('app_technique_show', {'id': technique.id}) }}">show</a>
                    <a href="{{ path('app_technique_edit', {'id': technique.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_technique_new') }}">Create new</a>
{% endblock %}
