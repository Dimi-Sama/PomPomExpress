    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for normale in normales %}
            <tr>
                <td>{{ normale.id }}</td>
                <td>{{ normale.nom }}</td>
                <td>{{ normale.description }}</td>
                <td>
                    <a href="{{ path('app_normale_show', {'id': normale.id}) }}">show</a>
