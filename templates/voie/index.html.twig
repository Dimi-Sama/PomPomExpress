{% extends 'base.html.twig' %}

{% block title %}Voie index{% endblock %}

{% block body %}
    <h1>Voie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voie in voies %}
            <tr>
                <td>{{ voie.id }}</td>
                <td>{{ voie.nom }}</td>
                <td>{{ voie.description }}</td>
                <td>
                    <a href="{{ path('app_voie_show', {'id': voie.id}) }}">show</a>
                    <a href="{{ path('app_voie_edit', {'id': voie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_voie_new') }}">Create new</a>
{% endblock %}
