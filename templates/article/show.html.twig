{% extends 'baseAdmin.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>{{ article.titre }} </h1> 
    <h2>{{ article.dateCrea ? article.dateCrea|date('Y-m-d H:i:s') : '' }}</h2>
    <div class = "conteneur">
    <div class = "contenu">
    {{ article.contenu }}
    </div>
    </div>

    <button class="btn btn-success rounded-pill px-3" type="button">
    <a href="{{ path('app_article_index') }}">back to list</a>
    </button>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-success rounded-pill px-3">Edit</a>

    
    {{ include('article/_delete_form.html.twig') }}

        {% for com in article.Commentaires %}
    <div class ="commentaire">

        <div class="utilisateur">{{com.utilisateur}}</div>
        <div class ="commentaire">{{com.contenu}}</div>
        
        <form method="post" action="{{ path('app_commentaire_delete', {'id': com.id}) }}" onsubmit="return confirm('Are you sure you want to delete this comment?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ com.id) }}">
            <button class="btn btn-danger rounded-pill px-3" type="submit">Delete</button>
        </form>

    </div>
    {% endfor %}
    
<style>
/* Titre de l'article */
h1 {
    color: #333;
    margin-bottom: 10%;
    margin-right: 10%;
    display: inline-block; /* Affiche le titre en ligne avec d'autres éléments */
}

/* Date de création */
h2 {
    color: #666;
    display: inline-block; /* Affiche la date en ligne avec d'autres éléments */
    
}
.conteneur {
    margin: 0 auto;
    background-color: #74992e;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    max-width: 100%;
}

.contenu {
    line-height: 1.6;
    margin-bottom: 20px;
    border: 2px solid #ccc;
    padding: 20px;
    max-width: 100%; /* Le contenu ne dépassera pas la largeur de la boîte */
    box-sizing: border-box; 
     overflow: hidden;
}

/* Autres styles restants inchangés */
/* ... */

</style>

{% endblock %}
