{% extends 'base.html.twig' %}

{% block title %}
	Article
{% endblock %}

{% block vid %}
	"../../images/vid/silver-wolf-honkai.mp4"
{% endblock %}

{% block body %}
	<style>
		@font-face {
			font-family: 'SpyAgency';
			src: url('../../font/spyagency3_2.ttf') format('truetype');
		}
		.container {
			display: flex;
			flex-direction: column;
			align-items: center;
			margin: 1.5em auto 0;
			text-align: center;
			background: #000000d6;
			border-radius: 20px;
			color: white;
		}
		.container img {
			width: 70%;
		}

		#commentFormContainer {
			width: 70%;
		}
		#commentFormContainer textarea {
			margin-top: 2em;
			width: 110%;
		}

		#commentFormContainer form {
			display: flex;
			flex-direction: column;
			align-items: center;
			border-radius: 20px;
			background: #6610f245;
		}
		#commentFormContainer form button {
			color: white;
			font-weight: bolder;
			text-decoration: none;
			background-color: #075ba6;
			border: 0;
			border-radius: 30px;
			margin-bottom:1em;
		}

		.commentaire {
			width: 90%;
			display: flex;
			border-radius: 20px;
			flex-direction: column;
			align-items: flex-start;
			background-color: #6610f245;
		}

		.commentaire h5 {
			color: rgb(219, 50, 135);
			margin-left: 1em;
			font-size: large;
			font-weight: bold;
		}

		.commentaire p {
			margin-left: 1em;
		}


		.titreArticle {
			font-family: 'SpyAgency';
			font-weight: 400;
			font-size: 3em;
			color: #FFFFFF;
			-webkit-text-stroke: 3px #6800ff;
		}

		.container div {
			width: 90%;
			margin-bottom: 2rem;
		}

		.viewArticle {
			max-width: 100%;
			height: auto;
			margin-top: 2rem;
		}

		.textArticle {
			color: white;
			margin-top: 2rem;
		}
		.container video {
			scale: 1.2;
			right: 0;
			margin-left: 5em;
		}
	</style>
	<a href="{{ path('app_article_index') }}" class="btn btn-success rounded-pill px-3 mt-3">Back to List</a>

	<h1 class="titreArticle">{{ article.titre }}</h1>
	<img src="https://picsum.photos/id/237/1280/720?random=1">
	<p class="textArticle">Publié le
		{{ dateFormat }}</p>
	<div class="contenu">{{ article.contenu | raw }}</div>

{% if is_granted("ROLE_USER") %}
	<div id="commentFormContainer">
		<!-- Le contenu du formulaire de commentaire sera chargé ici -->
		{{ include('commentaire/_form.html.twig') }}
	</div>
	{% else %}
	<h3>Merci de login pour pourvoir commenter</h3>
{% endif %}

	{% for com in article.Commentaires %}
		<div class="commentaire">
			{% if is_granted("ROLE_ADMIN") %}
				<form method="post" action="{{ path('app_commentaire_delete', {'id': com.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ com.id) }}">
					<button class="btn btn-danger m-2">Supprimer</button>
				</form>
			{% endif %}

			<h5>{{com.utilisateur}}</h5>
			<p>{{com.contenu | raw}}</p>
		{% endfor %}
	{% endblock %}
