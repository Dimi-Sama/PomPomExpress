{% extends 'base.html.twig' %}

{% block title %}Talent index{% endblock %}

{% block body %}
    <h1>Talent index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for talent in talent %}
            <tr>
                <td>{{ talent.id }}</td>
                <td>{{ talent.nom }}</td>
                <td>{{ talent.description }}</td>
                <td>
                    <a href="{{ path('app_talent_show', {'id': talent.id}) }}">show</a>
                    <a href="{{ path('app_talent_edit', {'id': talent.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_talent_new') }}">Create new</a>
{% endblock %}
